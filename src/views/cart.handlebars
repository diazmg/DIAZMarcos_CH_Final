<div class="container mx-auto p-4 md:p-8 bg-gray-50 min-h-screen">

    <h1 class="text-4xl font-extrabold text-indigo-700 mb-8 text-center border-b pb-4">Carrito de Compras</h1>

    {{#if cart.products}}
    <div class="flex flex-col lg:flex-row gap-8">

        <div class="lg:w-3/4">
            <div class="space-y-4">
                {{#each cart.products}}
                <div id="item-{{this.product._id}}"
                    class="cart-item flex flex-col sm:flex-row items-center bg-white p-4 rounded-xl shadow-md transition duration-200 hover:shadow-lg">

                    <div
                        class="w-20 h-20 flex-shrink-0 bg-gray-100 rounded-lg flex items-center justify-center overflow-hidden mb-3 sm:mb-0 sm:mr-4">
                        {{#if this.product.thumbnails.[0]}}
                        <img src="{{this.product.thumbnails.[0]}}" alt="{{this.product.title}}"
                            class="object-cover w-full h-full">
                        {{else}}
                        <span class="text-xs text-gray-500">Sin imagen</span>
                        {{/if}}
                    </div>

                    <div class="flex-grow text-center sm:text-left">
                        <h2 class="text-lg font-bold text-gray-800">{{this.product.title}}</h2>
                        <p class="text-sm text-gray-600">ID: {{this.product._id}}</p>
                        <p class="text-sm text-gray-600">Categoría: {{this.product.category}}</p>
                    </div>

                    <div class="flex items-center space-x-6 mt-4 sm:mt-0 sm:ml-auto">
                        <div class="text-center">
                            <p class="text-sm text-gray-500">Cantidad</p>
                            <span class="text-xl font-semibold text-gray-900 quantity-display"
                                data-product-id="{{this.product._id}}">
                                {{this.quantity}}
                            </span>
                        </div>

                        <div class="text-center">
                            <p class="text-sm text-gray-500">Precio/Unidad</p>
                            <span class="text-xl font-semibold text-indigo-600" data-price="{{this.product.price}}">
                                ${{this.product.price}}
                            </span>
                        </div>

                        <div class="text-center min-w-[100px]">
                            <p class="text-sm text-gray-500">Subtotal</p>
                            <span class="text-xl font-bold text-emerald-600 subtotal-display">
                            </span>
                        </div>
                    </div>

                    <button class="ml-0 mt-4 sm:ml-4 sm:mt-0 text-red-500 hover:text-red-700 transition-colors"
                        onclick="removeItem('{{this.product._id}}')">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </button>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="lg:w-1/4 sticky top-4">
            <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-2xl font-bold text-gray-800 mb-4 border-b pb-2">Resumen del Pedido</h2>

                <div class="flex justify-between text-lg font-semibold text-gray-700">
                    <span>Total de productos:</span>
                    <span id="cart-item-count" class="font-bold text-indigo-600">0</span>
                </div>

                <div
                    class="mt-4 pt-4 border-t border-gray-200 flex justify-between text-2xl font-extrabold text-gray-900">
                    <span>Total:</span>
                    <span id="cart-total-display" class="text-emerald-600">$0.00</span>
                </div>

                <button
                    class="mt-6 w-full py-3 bg-indigo-600 text-white font-bold rounded-lg hover:bg-indigo-700 transition duration-300 shadow-md">
                    Finalizar Compra
                </button>

                <button
                    class="mt-3 w-full py-2 border border-red-500 text-red-500 font-medium rounded-lg hover:bg-red-50 transition duration-300"
                    onclick="clearCart()">
                    Vaciar Carrito
                </button>
            </div>
        </div>

    </div>

    {{else}}
    <div class="text-center p-12 bg-white rounded-xl shadow-lg">
        <h2 class="text-2xl font-semibold text-gray-700 mb-3">¡Tu carrito está vacío!</h2>
        <p class="text-gray-500 mb-6">Actualmente no hay ningún producto en tu carrito. Te invitamos a explorar nuestro catálogo.</p>
        <a href="/products"
            class="bg-indigo-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-indigo-700 transition duration-300">
            Ir al Catálogo
        </a>
    </div>
    {{/if}}

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const dynamicCartId = '{{cartId}}';

    async function removeItem(productId) {
        if (!dynamicCartId || !productId) {
            Swal.fire('Error', 'IDs de carrito o producto faltantes.', 'error');
            return;
        }

        const { isConfirmed } = await Swal.fire({
            title: '¿Confirmás la eliminación?',
            text: "El producto será eliminado del carrito.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Sí, eliminar',
            cancelButtonText: 'Cancelar'
        });

        if (isConfirmed) {
            try {
                const response = await fetch(`/api/carts/${dynamicCartId}/products/${productId}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Eliminado!',
                        text: 'El producto se eliminó correctamente.',
                        timer: 3000,
                        toast: true,
                        position: 'bottom-end'
                    }).then(() => {

                        document.getElementById(`item-${productId}`).remove();
                        calculateCartTotals();
                    });
                } else {
                    const errorData = await response.json().catch(() => ({ message: response.statusText }));
                    Swal.fire('Error', errorData.message || 'No se pudo eliminar el producto.', 'error');
                }
            } catch (error) {
                console.error('Fallo en la conexión:', error);
                Swal.fire('Error de Conexión', 'No se pudo conectar con el servidor.', 'error');
            }
        }
    }

    async function clearCart() {
        if (!dynamicCartId) {
            Swal.fire('Error', 'ID de carrito faltante.', 'error');
            return;
        }

        const { isConfirmed } = await Swal.fire({
            title: '¿Vaciar carrito?',
            text: "Se eliminarán todos los productos del carrito.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Sí, vaciar',
            cancelButtonText: 'Cancelar'
        });

        if (isConfirmed) {
            try {
                const response = await fetch(`/api/carts/${dynamicCartId}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Carrito Vaciado',
                        text: 'El carrito se vació correctamente.',
                        timer: 3000,
                        toast: true,
                        position: 'bottom-end'
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    const errorData = await response.json().catch(() => ({ message: response.statusText }));
                    Swal.fire('Error', errorData.message || 'No se pudo vaciar el carrito.', 'error');
                }
            } catch (error) {
                console.error('Fallo en la conexión:', error);
                Swal.fire('Error de Conexión', 'No se pudo conectar con el servidor.', 'error');
            }
        }
    }


    function calculateCartTotals() {
        let total = 0;
        let itemCount = 0;

        document.querySelectorAll('.cart-item').forEach(itemEl => {
            const priceEl = itemEl.querySelector('[data-price]');
            const quantityEl = itemEl.querySelector('.quantity-display');
            const subtotalEl = itemEl.querySelector('.subtotal-display');

            if (priceEl && quantityEl && subtotalEl) {
                const price = parseFloat(priceEl.dataset.price);
                const quantity = parseInt(quantityEl.textContent.trim(), 10);

                if (!isNaN(price) && !isNaN(quantity)) {
                    const subtotal = price * quantity;
                    total += subtotal;
                    itemCount += quantity;

                    subtotalEl.textContent = `$${subtotal.toFixed(2)}`;
                }
            }
        });

        const totalDisplay = document.getElementById('cart-total-display');
        const itemCountDisplay = document.getElementById('cart-item-count');

        if (totalDisplay) {
            totalDisplay.textContent = `$${total.toFixed(2)}`;
        }
        if (itemCountDisplay) {
            itemCountDisplay.textContent = itemCount;
        }
    }

    document.addEventListener('DOMContentLoaded', calculateCartTotals);

</script>
<script src="https://cdn.tailwindcss.com"></script>